{
  "name": "ai_talks",
  "version": "3.0.1",
  "description": "AI Talks is an application that facilitates conversations between two language models. Each model receives a specialized prompt, guiding them to maintain dialogue and intentionally drift into digressions, making conversations engaging and varied.",
  "author": "Mathsqrt2",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start:conversation": "nest start",
    "start:dev": "nest start --watch",
    "start:conversation:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@fastify/csrf-protection": "^7.1.0",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^11.0.9",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.9",
    "@nestjs/event-emitter": "^3.0.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/platform-socket.io": "^11.1.5",
    "@nestjs/schedule": "^5.0.1",
    "@nestjs/serve-static": "^5.0.3",
    "@nestjs/swagger": "^11.0.3",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/typeorm": "^11.0.0",
    "@nestjs/websockets": "^11.1.5",
    "@tailwindcss/vite": "^4.1.12",
    "@types/crypto-js": "^4.2.2",
    "@types/node-telegram-bot-api": "^0.64.7",
    "axios": "^1.12.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "crypto-js": "^4.2.0",
    "csrf-csrf": "^4.0.3",
    "helmet": "^8.1.0",
    "mysql2": "^3.12.0",
    "node-telegram-bot-api": "^0.63.0",
    "ollama": "^0.5.12",
    "ollama-node": "^0.1.28",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.2",
    "@nestjs/schematics": "^11.0.7",
    "@nestjs/testing": "^11.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "prisma": "^6.3.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@libs/ai(|/.*)$": "<rootDir>/libs/ai/src/$1",
      "^@libs/constants(|/.*)$": "<rootDir>/libs/constants/src/$1",
      "^@libs/database(|/.*)$": "<rootDir>/libs/database/src/$1",
      "^@libs/dtos(|/.*)$": "<rootDir>/libs/dtos/src/$1",
      "^@libs/enums(|/.*)$": "<rootDir>/libs/enums/src/$1",
      "^@libs/logger(|/.*)$": "<rootDir>/libs/logger/src/$1",
      "^@libs/settings(|/.*)$": "<rootDir>/libs/settings/src/$1",
      "^@libs/telegram(|/.*)$": "<rootDir>/libs/telegram/src/$1",
      "^@libs/types(|/.*)$": "<rootDir>/libs/types/src/$1"
    }
  }
}
